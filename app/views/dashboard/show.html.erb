
<div class="wrapper">
  <% content_for(:sidebar) do %>
    <%= render partial: "shared/sidenav" %>
  <% end %>
  <% content_for(:trans) do %>
    <%= render partial: "transactions/line_items" %>
  <% end %>
  <div id="content">
    <div class="panel panel-primary col-md-6 col-sm-6 col-xs-12">
      <div class="panel-heading">
        <h3 class="panel-title">My Calling Card</h3>
      </div>
      <div class="panel-body">
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <span class="glyphicon glyphicon-star" aria-hidden="true"></span><%= @profile.name %>
            </h4>
            <p>
              <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>  Birthday: <%= user_birthday @profile %> <br />
              <span class="glyphicon glyphicon-phone" aria-hidden="true"></span> Phone: <%= profile_phone @profile %> <br />
              <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span> Speciality: <%= @profile.specialities %> <br />
              <span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span> Others: <%= @profile.in_network %> <br/>
              <span class="glyphicon glyphicon-phone-alt" aria-hidden="true"></span> Contact: <%= @profile.contact %>
            </p>
          </div>
          <div class="media-right media-middle">
            <a href="#">
              <%= thumbnail_image @profile  %>
            </a>
          </div>
        </div>
      </div>
      <div class="panel-footer text-right"><%= link_to 'Edit Profile', edit_user_profile_path({id: @profile.id, user_id: @profile.user_id}) %></div>
    </div>
    <div class="panel panel-success col-md-3 col-sm-3 col-xs-12">
      <div class="panel-heading">
        <h3 class="panel-title success">Total Contribution</h3>
      </div>
      <div class="panel-body">
        NGN<h3 class="text-right" style="color:blue;align:right;"> <%= user_contribution_lcy @profile %></h3>
        USD<h3 class="text-right" style="color:blue;align:right;"> <%= user_contribution_fcy @profile %></h3>
      </div>
    </div>
    <div class="row">
      <div class="panel panel-primary col-md-6 col-sm-6 col-xs-12">
        <div class="panel-heading">
          <h3 class="panel-title">Recent Transactions</h3>
        </div>
        <div class="panel-body">
          <div class="panel-body">
            <p>Your last 5 transactions are shown below:</p>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Currency</th>

              </tr>
            </thead>
              <%= display_transactions(@trans).html_safe %>
          </table>
        </div>
        <div class="panel-footer text-right"><%= link_to "Make a Contribution", new_user_transaction_path({user_id: @profile.user_id}) %></div>
      </div>
      <div class="panel panel-success col-md-3 col-sm-3 col-xs-12">
        <div class="panel-heading">
          <h3 class="panel-title success">Total Contribution</h3>
        </div>
        <div class="panel-body">
          NGN<h3 class="text-right" style="color:blue;align:right;"> <%= user_contribution_lcy @profile %></h3>
          USD<h3 class="text-right" style="color:blue;align:right;"> <%= user_contribution_fcy @profile %></h3>
        </div>
      </div>
    </div>
  </div>
</div>
